<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text_view"
            style="@style/TextViewStyle"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/language_l2_text_view"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_marginRight="0dp"
                android:textSize="@dimen/very_small_text_size"
                android:text="Angielski"
                />
            <TextView
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/very_small_text_size"
                android:text="-"/>
            <TextView android:id="@+id/language_l1_text_view"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="@dimen/very_small_text_size"
                android:text="Polski"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/LabelStyle"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/number_words"
                android:textSize="@dimen/very_small_text_size" />

            <TextView
                android:id="@id/number_words_text_view"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/very_small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/LabelStyle"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/size"
                android:textSize="@dimen/very_small_text_size" />

            <TextView
                android:id="@+id/size_text_view"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/very_small_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/LabelStyle"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/rating"
                android:textSize="@dimen/very_small_text_size" />

            <TextView
                android:id="@+id/rating_text_view"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/very_small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/LabelStyle"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/download_count"
                android:textSize="@dimen/very_small_text_size" />

            <TextView
                android:id="@+id/downloads_text_view"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:padding="@dimen/small_padding"
                android:textSize="@dimen/very_small_text_size" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >
        <TextView android:id="@+id/downloaded_text_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:text="@string/downloaded"
            android:textColor="@color/correctColor"
            android:textSize="@dimen/very_small_text_size"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/download_button"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />
        <TextView android:id="@+id/is_download_text_view"
            style="@style/TextViewStyle"
            android:layout_width="wrap_content"
            android:text="@string/downloading"
            android:textSize="@dimen/very_small_text_size"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>