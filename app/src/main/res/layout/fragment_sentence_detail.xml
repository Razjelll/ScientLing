<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sentence_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dyszlewskiR.edu.scientling.fragment.SentenceDetailFragment"
    tools:showIn="@layout/activity_sentence_detail">

    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/sentenceEditText"
        android:hint="@string/sentence"/>
    <EditText
        style="@style/EditTextStyle"
        android:id="@+id/translationEditText"
        android:layout_below="@id/sentenceEditText"
        android:hint="@string/sentence_translation"/>
    <Button
        style="@style/ButtonStyle"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:text="@string/save"/>
</RelativeLayout>
