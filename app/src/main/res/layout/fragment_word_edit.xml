<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_word_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.dyszlewskiR.edu.scientling.fragment.WordEditFragment"
    tools:showIn="@layout/activity_word_edit">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
                <Button
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/lesson_change_button"
                    android:text="@string/change"
                    android:layout_marginTop="10dp"
                   />
                <TextView
                    style="@style/LabelStyle"
                    android:id="@+id/set_text_view"
                    android:gravity="center_horizontal"
                    android:text="Angielski w piguÅ‚ce"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"/>
                <TextView
                    style="@style/TextViewStyle"
                    android:id="@+id/lesson_text_view"
                    android:gravity="center_horizontal"
                    android:text="Zwierzaczki"
                    android:layout_weight="0.4"/>

        </LinearLayout>

        <TextView
            style="@style/LabelStyle"
            android:text="@string/word"
            />
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/word_edit_text"
            />
        <TextView
            style="@style/LabelStyle"
            android:text="@string/put_translation"/>
        <EditText
            style="@style/EditTextStyle"
            android:id="@+id/translation_edit_text"
            android:hint="@string/translation_separator"
            />

</LinearLayout>
