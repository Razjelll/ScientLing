<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dyszlewskiR.edu.scientling.activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:orientation="vertical"
    android:background="@drawable/shadow_border"
    android:layout_margin="@dimen/margin">

    <ProgressBar
       style="@style/ProgressBarStyle"
       android:id="@+id/set_progress_bar"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:layout_below="@+id/set_progress_bar"
        android:layout_above="@+id/repetitions_buttons"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow_border"
        >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repetitions_buttons"
        android:orientation="horizontal"
        android:layout_above="@+id/learning_buttons"
        android:layout_marginTop="10dp">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/repetition_button"
            android:text="@string/repetitions"
            android:layout_weight="0.2"/>

        <ImageButton
            style="@style/ButtonStyle"
            android:id="@+id/more_repetition_button"

            android:layout_weight="0.8"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/learning_buttons"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/learning_button"
            android:text="@string/new_words"
            android:layout_weight="0.2"/>

        <ImageButton
            style="@style/ButtonStyle"
            android:id="@+id/more_learning_button"
            android:layout_weight="0.8"/>
    </LinearLayout>
</RelativeLayout>
