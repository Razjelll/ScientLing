<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dyszlewskiR.edu.scientling">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />



    <application
        android:name=".LingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <receiver android:name=".services.notification.NotificationStartupReceiver"
            android:process=":reminder_process">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".services.notification.NotificationReceiver"
            android:process=":reminder_process"/>
        <service android:name=".services.notification.NotificationService"
            android:process=":reminder_process"/>
        <activity android:name=".activity.LoginActivity" />
        <activity
            android:name=".activity.ExerciseActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.RepetitionListActivity"
            android:label="@string/title_activity_repetition_list"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />



        <activity
            android:name=".activity.SentencesListActivity"
            android:label="@string/title_activity_sentences_list"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.WordEditActivity"
            android:label="@string/title_activity_word_edit"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:permission="android"/>
        <activity
            android:name=".activity.SentenceDetailActivity"
            android:label="@string/title_activity_sentence_detail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.SetActivity"
            android:label="@string/title_activity_set"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.LessonActivity"
            android:label="@string/title_activity_lesson_edit"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.SetSelectionActivity"
            android:label="@string/title_activity_set_selection"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.LessonSelectionActivity"
            android:label="@string/title_activity_lesson_selection"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.WordManagerActivity"
            android:label="@string/title_activity_word_manager"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.LearningListActivity"
            android:label="@string/title_activity_learning_list"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LearningActivity"
            android:label="@string/title_activity_learning"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.SummaryLearningActivity"
            android:label="@string/title_activity_summary_learning"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.FlashcardActivity"
            android:label="@string/title_activity_flashcard"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.PreferenceActivity"
            android:label="@string/title_activity_preference" />
        <activity
            android:name=".activity.RepetitionsActivity"
            android:label="@string/title_activity_repetitions"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.CurrentSetSelectionActivity"
            android:label="@string/title_activity_current_set_selection"
            android:theme="@style/NoActionBar" />

        <service
            android:name=".services.repetitions.SaveExerciseService"
            android:enabled="true" />

        <activity
            android:name=".activity.ManageWordsActivity"
            android:label="@string/title_activity_manage_words"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.HintsListActivity"
            android:label="@string/title_activity_hint_list"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activity.HintActivity"
            android:label="@string/title_activity_hint"
            android:theme="@style/NoActionBar"></activity>
    </application>

</manifest>